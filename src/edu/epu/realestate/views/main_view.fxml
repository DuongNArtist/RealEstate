<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="panRoot" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/null" fx:controller="edu.epu.realestate.controllers.MainController">
    <top>
        <HBox fx:id="panMenu" alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnShowManager" alignment="BOTTOM_CENTER" contentDisplay="TOP" mnemonicParsing="false"
                        onAction="#showManager" prefHeight="80.0" prefWidth="80.0" text="Quản Lý"/>
                <Button fx:id="btnShowGroup" alignment="BOTTOM_CENTER" contentDisplay="TOP" mnemonicParsing="false"
                        onAction="#showGroup" prefHeight="80.0" prefWidth="80.0" text="Nhóm Tin"/>
                <Button fx:id="btnShowProperty" alignment="BOTTOM_CENTER" contentDisplay="TOP" mnemonicParsing="false"
                        onAction="#showProperty" prefHeight="80.0" prefWidth="80.0" text="Tin Tức"/>
                <Button fx:id="btnSignOut" alignment="BOTTOM_CENTER" contentDisplay="TOP" mnemonicParsing="false"
                        onAction="#signOut" prefHeight="80.0" prefWidth="80.0" text="Đăng Xuất"/>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </HBox>
    </top>
</BorderPane>
